{
    "type": "module",
    "version": "1.0.0",
    "author": "BlobMaster41",
    "description": "More than your typical logger. Why not bring style to your logs? The OPNet Logger library allows you to create and style logs for your OPNet applications. Written in TypeScript!",
    "engines": {
        "node": ">=16.0.0"
    },
    "exports": {
        "node": {
            "import": "./build/node.js",
            "require": "./cjs/node.js",
            "types": "./build/node.d.ts"
        },
        "browser": {
            "import": "./browser/index.js",
            "require": "./browser/index.js",
            "types": "./browser/index.d.ts"
        }
    },
    "homepage": "https://opnet.org",
    "keywords": [
        "opnet",
        "bsi",
        "bsi-binary",
        "logger",
        "browser logger",
        "bitcoin",
        "btc",
        "bitcoin smart contracts",
        "smart inscriptions",
        "ordinals"
    ],
    "license": "MIT",
    "main": "build/index.js",
    "types": "build/index.d.ts",
    "typings": "build/index.d.ts",
    "module": "build/index.js",
    "name": "@btc-vision/logger",
    "publishConfig": {
        "access": "public",
        "tag": "latest"
    },
    "repository": {
        "type": "git",
        "url": "git://github.com/btc-vision/logger.git"
    },
    "scripts": {
        "watch": "gulp watch",
        "build": "gulp",
        "test": "jest --runInBand",
        "setup": "npm npm i && npm run build",
        "browserBuild": "webpack --mode production",
        "cjs": "gulp cjs",
        "docs": "typedoc --out docs --tsconfig tsconfig.json --readme README.md --name OPNet --plugin typedoc-material-theme --themeColor '#cb9820' --exclude src/scripts/test.ts --exclude src/index.ts src",
        "install": "gulp && gulp cjs"
    },
    "devDependencies": {
        "@babel/plugin-proposal-class-properties": "^7.18.6",
        "@babel/plugin-transform-runtime": "^7.24.3",
        "@babel/preset-env": "^7.24.5",
        "@babel/preset-flow": "^7.24.1",
        "@babel/preset-react": "^7.24.1",
        "@babel/preset-typescript": "^7.24.1",
        "@jest/types": "^29.6.3",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.11.30",
        "eslint": "^8.57.0",
        "jest": "^29.7.0",
        "prettier": "^3.3.1",
        "ts-jest": "^29.1.2",
        "typedoc": "^0.25.13",
        "typedoc-material-theme": "^1.0.2",
        "typescript": "^5.4.5",
        "typescript-eslint": "^7.4.0",
        "webpack": "^5.91.0",
        "webpack-cli": "^5.1.4"
    },
    "dependencies": {
        "@jest/types": "^29.6.3",
        "@types/jest": "^29.5.12",
        "babel-loader": "^9.1.3",
        "babel-preset-react": "^6.24.1",
        "babelify": "^10.0.0",
        "assert": "^2.1.0",
        "babel-plugin-transform-import-meta": "^2.2.1",
        "chalk": "^5.3.0",
        "gulp": "^4.0.2",
        "gulp-cached": "^1.1.1",
        "gulp-logger": "^0.0.2",
        "gulp-typescript": "^6.0.0-alpha.1",
        "gulplog": "^2.2.0",
        "supports-color": "^9.4.0",
        "ts-jest": "^29.1.2",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.2"
    }
}
